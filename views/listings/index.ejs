<body>
  <div id="filter-wrapper">
    <button class="scroll-btn left-btn"><i class="fa-solid fa-less-than"></i></button>

      <div id="filters-container">
        <div id="filters">
          <% const categories = [
            { name: "Trending", icon: "fa-fire" },
              { name: "Rooms", icon: "fa-bed" },
              { name: "Iconic cities", icon: "fa-mountain-city" },
              { name: "Amazing pool", icon: "fa-person-swimming" },
              { name: "Farms", icon: "fa-tractor" },
              { name: "Gym", icon: "fa-dumbbell" },
              { name: "Beach", icon: "fa-umbrella-beach" },
              { name: "Mountains", icon: "fa-mountain-sun" },
              { name: "Camping", icon: "fa-campground" },
              { name: "Luxury", icon: "fa-hotel" },
              { name: "Winter", icon: "fa-snowflake" },
              { name: "Nature", icon: "fa-tree" },
              { name: "City", icon: "fa-city" },
              { name: "Historic", icon: "fa-landmark" },
              { name: "Countryside", icon: "fa-person-hiking" },
              { name: "Lake", icon: "fa-water" },
              { name: "Forest", icon: "fa-tree-city" },
              { name: "Houseboat", icon: "fa-ship" },
              { name: "Studio", icon: "fa-house" },
              { name: "Palace", icon: "fa-chess-rook" },
              { name: "Resort", icon: "fa-home" },
              { name: "Retreat", icon: "fa-seedling" },
              { name: "Hotel", icon: "fa-building" },
              { name: "Villa", icon: "fa-house-chimney" },
              { name: "Chalet", icon: "fa-house-tsunami" },
              { name: "Apartment", icon: "fa-building-user" }
            ]; %>

          <% categories.forEach(cat => { %>
            <div class="filter">
              <a href="/listings/filter/<%= cat.name %>">
                <div><i class="<%= cat.brand ? 'fa-brands' : 'fa-solid' %> <%= cat.icon %>"></i></div>
                <p><%= cat.name.replace(/-/g, ' ') %></p>
              </a>
            </div>
          <% }); %>
        </div>
      </div>  
      <button class="scroll-btn right-btn"><i class="fa-solid fa-greater-than"></i></button>
      <div class="tax-toggle">
        <div class="toggle-container">
          <div class="form-check-reverse form-switch">
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
            <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
          </div>
        </div>
      </div>
  </div>      
      <div class="row row-cols-lg-4 row-cols-adjust">
        <% for (let listing of listings) { %>
          <a href="/listings/<%= listing._id %>" class="listing-link" style="text-decoration: none;">
            <div class="card col listing-card">
              <img src="<%= listing.image?.url || '/images/default.jpg' %>" class="card-img-top listing-index-img" alt="listing-img">
              <div class="card-img-overlay"></div>
              <div class="listing-card-body">
                <p class="listing-card-text">
                  <b><%= listing.title %></b><br>
                  â‚¹ <%= listing.price.toLocaleString("en-IN") %> / night
                  <i class="tax-info">&nbsp; &nbsp;+18% GST</i>
                </p>
              </div>
            </div>
          </a>
        <% } %>
      </div> 
</body>

<script>
  const taxToggle = document.getElementById("flexSwitchCheckDefault");
  taxToggle.addEventListener("click", () => {
    const taxLabels = document.getElementsByClassName("tax-info");
    for (let label of taxLabels) {
      label.style.display = label.style.display === "inline" ? "none" : "inline";
    }
  });

  const filtersContainer = document.getElementById("filters-container");
  document.querySelector(".left-btn").addEventListener("click", () => {
    filtersContainer.scrollLeft -= 150;
  });
  document.querySelector(".right-btn").addEventListener("click", () => {
    filtersContainer.scrollLeft += 150;
  });
</script>
